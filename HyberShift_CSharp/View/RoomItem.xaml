    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <materialDesign:PackIcon Grid.Column="0" Grid.Row="0" Kind="Roomba" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                 Margin="5,5,5,5" Foreground="{StaticResource AccentBrush}"/>
        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="16" Style="{DynamicResource MaterialDesignBody2TextBlock}" Foreground="Black"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Name}"/>

        <Separator Foreground="Black" Grid.Column="1" Grid.Row="1"/>

        <materialDesign:PackIcon Grid.Column="0" Grid.Row="2" Kind="AccountMultiple" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                 Margin="5,5,5,5" Foreground="{StaticResource AccentBrush}"/>
        <TextBlock Grid.Column="1" Grid.Row="2" TextWrapping="WrapWithOverflow" Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding ListMembers}" Foreground="Black"/>

        <materialDesign:PackIcon Grid.Row="0" Grid.Column="1" Margin="135,10,0,0"
               Kind="MessageAlert" Width="20" Height="20"
               Visibility="{Binding DisplayNewMessage}"
               Foreground="{StaticResource AccentBrush}"/>
    </Grid>
</UserControl>
