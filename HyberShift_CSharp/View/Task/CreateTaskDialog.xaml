                    <TextBlock x:Uid="Name" Style="{DynamicResource MaterialDesignBody1TextBlock}" Margin="10,0,0,0">IN PROGRESS</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Alert"/>
